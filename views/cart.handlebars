{{!-- Container --}}
<div class="container">
  <h1 class="text-center mb-4">Your Cart</h1>

  {{!-- Product Headings --}}
  <div class="product-inner-headings">
    {{!-- Product Image --}}
    <div class="product-image-heading">
      <h5>Products</h5>
    </div>
    {{!-- End Product Image --}}
    {{!-- Product Price --}}
    <div class="product-name-heading">
      <h5>Product</h5>
    </div>
    {{!-- End Product Price --}}
    {{!-- Product Price --}}
    <div class="product-price-heading">
      <h5>Price</h5>
    </div>
    {{!-- End Product Price --}}
    {{!-- Product Quantity --}}
    <div class="product-qty-heading">
      <h5>Quantity</h5>
    </div>
    {{!-- End Product Quantity --}}
    {{!-- Product Remove --}}
    <div class="product-remove-heading">
      <h5>Remove</h5>
    </div>
    {{!-- End Product Remove --}}
    {{!-- Product total --}}
    <div class="product-total-heading">
      <h5>Total</h5>
    </div>
    {{!-- End Product Total --}}
  </div>
  {{!-- End Product Headings --}}

  {{!-- Product Row --}}
  <div class="product-row">
    {{!-- Product Inner --}}
    <div class="product-inner">
      {{!-- Product Image --}}
      <div class="product-image">
        <a href="">
          <img src="/img/backpack.jpeg" alt="">
        </a>
      </div>
      {{!-- End Product Image --}}
      {{!-- Product Price --}}
      <div class="product-name">
        <p>Backpack</p>
      </div>
      {{!-- End Product Price --}}
      {{!-- Product Price --}}
      <div class="product-price">
        <p>$9.99</p>
      </div>
      {{!-- End Product Price --}}
      {{!-- Product Quantity --}}
      <div class="product-qty">
        <p>2</p>
      </div>
      {{!-- End Product Quantity --}}
      {{!-- Product Remove --}}
      <div class="product-remove">
        <a href="/cart"><i class="fal fa-trash trash-red"></i></a>
      </div>
      {{!-- End Product Remove --}}
      {{!-- Product total --}}
      <div class="product-total">
        <p><strong>$19.98</strong></p>
      </div>
      {{!-- End Product Total --}}
    </div>
    {{!-- End Product Inner --}}
  </div>
  {{!-- End Product Row --}}
</div>
{{!-- End Container --}}


<div class="container">
  <div class="cart-details">
    <a href="">
      <button type="button" class="btn btn-outline-danger wide-btn">Clear Cart</button>
    </a>

    <p><strong>Cart Total: </strong><span>$9.99</span></p>
  </div>
</div>

